<div class="container">   
        <form class="mt-5 p-4 mx-auto bg-white text-dark" action='/signup' method="POST" style="width: 468px;">
                <div class="form-group">
                        <label for="username">Username: </label>
                        <div class="col-sm-9">
                                <input type="text" class="form-control" name="username" id='username' aria-describedby="username_help" placeholder="Enter username">
                                <small id="username_help" class="form-text text-muted">We'll never share your info with anyone else.</small>
                        </div>
                </div>
                <div class="form-group">        
                        <label for="fname">First Name: </label>
                        <div class="col-sm-9">
                                <input type="text" name="fname" id="fname" class="form-control">
                        </div>
                </div>
                <div class="form-group">
                        <label for="lname">Last Name: </label>
                        <div class="col-sm-9">
                                <input type="text" name="lname" id="lname" class="form-control">
                        </div>
                </div>
                <div class="form-group">
                        <label for="password">Password: </label>
                        <div class="col-sm-9">
                                <input type="password" name="password" id="password" class="form-control">
                        </div>
                        <!-- <span class="border"></span> -->
                </div>
                <button type='submit' class="btn btn-primary btn-sm mt-3" value='Create Account'>Create Account</button>
        </form>
</div>
