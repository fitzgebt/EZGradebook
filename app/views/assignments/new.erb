<h2>Create a new Assignemnt:</h2>

<form action='/assignments' method="POST">
    <p>
            <label for="title">Title: </label>
            <input type="text" name="assignment[title]" id='assignment_title'><br>
    </p>
    <p>
            <label for="content">Content: </label>
            <textarea name="assignment[content]" id="assignment_content" rows="4" cols="50"></textarea><br>
    </p>

    <p>
            <label for="students">Assign Students:</label>
            <% @students.each do |student| %>
                <label for="student_grade"><%= student.lname %>, <%= student.fname %></label>
                <input type="text" name="students[grade][]" id="student_grade">
                <% end %> 
    </p>
            <input type='submit' value='Create Assignment'>
</form>


