<div class="container">
        <form class="mt-5 p-4 mx-auto bg-white text-dark" action='/assignments' method="POST" style="width: 468px;"">
                <h4>New Assignemnt:</h4>
                        <div class="form-group">
                                <label for="title">Title: </label>
                                <div class="col-sm-9">
                                        <input type="text" name="assignment[title]" id='assignment_title' class="form-control">
                                </div>
                        </div>
                        <div class="form-group">
                                <label for="content">Content: </label>
                                <div class="col-sm-9">
                                        <textarea name="assignment[content]" id="assignment_content" rows="4" cols="50"></textarea>
                                </div>
                        </div>
                        <div class="form-group">
                                <label for="students">Students Grades:</label>
                                <% @students.each do |student| %>
                                <div class="container mx-auto bg-white text-dark"
                                        <label for="student_grade"><%= student.lname %>, <%= student.fname %></label>
                                        <input class="form-control" type="text" name="students[<%=student.id%>][grade]" id="student_grade" %>
                                </div>
                                <%end%>
                        </div>
                <button type='submit' value='Create Assignment' class="btn btn-primary btn-sm mt-3" value="Create Assignment">Create Assignment</button>
        </form>
</div>