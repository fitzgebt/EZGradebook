<h2><%=@assignment.title%></h2>
<p><%=@assignment.content%></p>
<p><em>created by - <%=@teacher.fname%> <%=@teacher.lname%></em></p>

<h2>Students With This Assignment:</h2>
<!-- iteration of students attached to assignemnt.id-->
<% @assignment.assignments_students.each do |assignment| %>
    <% Student.all.each do |student| %>
        <% if student.id == assignment.student_id %>
            
            <a href="/students/<%= student.slug %>" ><%= student.lname %>, <%= student.fname %> -- <%= assignment.grade %></a><br>
        <% end %>
    <% end %>
<% end %>    


<p><a href="/assignments/<%=@assignment.id%>/edit" ><button>Edit This Post</button></a></p>
